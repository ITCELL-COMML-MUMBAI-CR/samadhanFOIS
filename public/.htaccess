<IfModule mod_rewrite.c>
    RewriteEngine On

    # For production, RewriteBase should be '/'.
    # For development (XAMPP), uncomment the line below and comment out the production line.
    RewriteBase /samadhanFOIS/public/
    # RewriteBase /

    # Redirect all requests to index.php if the file/directory doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]
</IfModule>

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive files
<Files ~ "\.(log|ini)$">
    Order allow,deny
    Deny from all
</Files>
